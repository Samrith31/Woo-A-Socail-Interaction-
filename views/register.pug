extends layouts/login-layout.pug


      
block content 
    div.container
        h1 Create Account
        form#registerform(method="post",class="myForm",onsubmit="event.preventDefault(); validateform();")
            p.errorMessage #{errorMessage}
            input(type="text",class="myInput",name="firstname",placeholder="First Name",value=firstname,required="")
            input(type="text",class="myInput",name="lastname",placeholder="Last Name",value=lastname,required="")
            input(type="text",class="myInput",name="username",placeholder="Username",value=username,required="")
            input(type="email",class="myInput",name="email",placeholder="Enter Your Email",value=email,required="")
            input#password(type="password",class="myInput",name="password",placeholder="Password",required="")
            input#passwordconf(type="password",class="myInput",name="passwordconf",placeholder="Confirm Password",required="")
            input(type="submit",value="Create", class='btn')
        a(href="/login") Already have an account? Login here 
          
    script. 
        var passwordfield= document.getElementById("password")
        var passwordconfield=document.getElementById("passwordconf")
        var regform=document.getElementById("registerform")

        function validateform(){
          if(passwordfield.value!=passwordconfield.value){
              alert("Password do not match ")
          }
          else{
              regform.submit();
          }
        }
    
    